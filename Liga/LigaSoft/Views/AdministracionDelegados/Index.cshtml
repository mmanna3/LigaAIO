@using LigaSoft.ExtensionMethods
@using LigaSoft.Models.ViewModels

@section Titulo {
	Administración de delegados
}

@(Html.YKN<UsuarioDelegadoPendienteDeAprobacionVM>().Grid()
			.WithColumns(column =>
			{
				column.AddTextColumn(x => x.Email);
				column.AddTextColumn(x => x.Club);
			})
			.Actions(action =>
			{
				action.JavaScriptWithRowId("Aprobar", "Aprobar");
				action.JavaScriptWithRowId("Rechazar", "Rechazar");
			})
			.DataSource("/AdministracionDelegados/GetDelegadosPendientesDeAprobacionForGrid")
)

<script>
	function Aprobar(obj) {
		$.ajax({
			url: '/AdministracionDelegados/Aprobar',
			type: "POST",
			data: { id: obj.getAttribute('data-id') },
			success: function() {
				window.location.reload(false);
			}
		});
	}

	function Rechazar(obj) {
		$.ajax({
			url: '/AdministracionDelegados/Rechazar',
			type: "POST",
			data: { id: obj.getAttribute('data-id') },
			success: function() {
				window.location.reload(false);
			}
		});
	}
</script>