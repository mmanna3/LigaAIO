@using LigaSoft.ExtensionMethods
@using LigaSoft.Models.Enums
@model LigaSoft.Models.ViewModels.ClubVM

@section Titulo{
	Detalles del club
}

@using (Html.YKN().Form(FormSizeEnum.Big))
{

	<div class="row">
		<div class="col-sm-3">
			<img src="@Model.Escudo" alt="escudo">
		</div>
		<div class="col-sm-9">
			@Html.YKN().DisplayFor(x => x.Nombre)
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-sm-6">
			@Html.YKN().DisplayFor(x => x.Direccion)
		</div>
		<div class="col-sm-6">
			@Html.YKN().DisplayFor(x => x.Localidad)
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6">
			@Html.YKN().DisplayFor(x => x.Cuota)
		</div>
		<div class="col-sm-6">
			@Html.YKN().DisplayFor(x => x.Techo)
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			@Html.YKN().DisplayMultilineFor(x => x.Equipos)
		</div>
	</div>

	{ Html.YKN().FooterVolver(); }
}

<script>
	function habilitarODarDeBaja(equipoId) {
		$.ajax({
			url: '/Equipo/HabilitarODarDeBaja',
			type: "POST",
			data: { equipoId: equipoId },
			success: function() {
				window.location.reload(false);
			}
		});
	}
</script>