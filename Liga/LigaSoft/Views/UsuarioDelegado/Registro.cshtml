@using LigaSoft.ExtensionMethods
@using LigaSoft.Models.Enums
@model LigaSoft.Models.ViewModels.UsuarioDelegadoVM

@{
	Layout = "~/Views/Shared/_LayoutSinPanelLateral.cshtml";
}

@section Titulo{
	Registro de nuevo delegado
}
@using (Html.YKN().Form())
{
	<section>
		<h4>Si aún no estás registrado, ingresá tus datos.</h4>
		<hr />
		
		@Html.YKNNonTyped().ValidationSummary()

		<div class="row">
			<div class="col-sm-6">
				@Html.YKN().EditorFor(x => x.Email)
			</div>
			<div class="col-sm-6">
				@Html.YKN().ComboFor(x => x.ClubId).Values(Model.ClubsParaCombo)
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm-6">
				@Html.YKN().EditorFor(x => x.Nombre)
			</div>
			<div class="col-sm-6">
				@Html.YKN().EditorFor(x => x.Apellido)
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6">
				@Html.YKN().EditorFor(x => x.Password)
			</div>
			<div class="col-sm-6">
				@Html.YKN().EditorFor(x => x.ConfirmPassword)
			</div>
		</div>

		<div class="row" style="padding-top: 2em;">
			<div class="col-sm-12">
				@(Html.YKN().Button("Registrarme")
					  .Color(BootstrapColorEnum.Primary)
					  .FullWidth()
					  .Submit()
					  )
			</div>
		</div>
	</section>	
}

