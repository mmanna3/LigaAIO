@using LigaSoft.ExtensionMethods
@model LigaSoft.Models.ViewModels.PublicidadVM

@section Titulo{
	Editar publicidad
}

@Html.YKNNonTyped().ValidationSummary()

@using (Html.YKN().Form())
{
	@Html.HiddenFor(x => x.Id)

	<div class="row">
		<div class="col-sm-6">
			@Html.YKN().DisplayFor(x => x.Titulo)
			@Html.HiddenFor(x => x.Titulo)
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			@if (Model.Titulo == "Desktop")
			{
				<div>
					Tamaño: 180px x 1000px
				</div>
			}
			else
			{
				<div>
					Tamaño: 130px x 300px
				</div>
			}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<img src="@Model.ImagenActualUrl" alt="foto">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			@Html.YKN().BrowseFileFor(x => x.ImagenNueva)
		</div>
	</div>

	{ Html.YKN().FooterGuardarCancelar(); }
}
