@using LigaSoft.ExtensionMethods
@model LigaSoft.Models.ViewModels.InformeVM


@section Titulo {
	Informe del período: @Model.FechaInicio - @Model.FechaFin.
}

@section Subtitulo {
	En el caso de los conceptos de clubes, sólo se tendrán en cuenta los pagos efectuados en el período. Para este informe, no se considera la fecha del movimiento en sí, sino la del pago.
}

<div class="row">
	<div class="col-sm-4">

		<div class="row">
			<table class="table table-bordered">
				<thead>
				<tr>
					<th scope="col">Concepto</th>
					<th scope="col">Monto</th>
				</tr>
				</thead>
				<tbody>

				<tr>
					<td>Insumos</td>
					<td>@Model.Insumos</td>
				</tr>
				<tr>
					<td>Fichajes</td>
					<td>@Model.Fichajes</td>
				</tr>
				<tr>
					<td>Libres</td>
					<td>@Model.Libres</td>
				</tr>
				<tr>
					<td>Cuotas</td>
					<td>@Model.Cuotas</td>
				</tr>
				<tr>
					<td>EDEFI Ingresos</td>
					<td>@Model.CajaEdefiIngresos</td>
				</tr>
				<tr>
					<td>EDEFI Egresos</td>
					<td style="color: red;">@Model.CajaEdefiEgresos</td>
				</tr>
				<tr>
					<td style="font-weight: bold">Total</td>
					<td style="font-weight: bold">@Model.Total</td>
				</tr>

				</tbody>
			</table>
		</div>

	</div>
</div>

@(Html.YKN().Button("Imprimir").OnClickImprimir())