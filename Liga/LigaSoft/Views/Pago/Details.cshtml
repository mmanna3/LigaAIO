@using LigaSoft.ExtensionMethods
@using LigaSoft.Models.ViewModels
@model PagoVM

@section Titulo{
	Detalles del pago
}

@using (Html.YKN().Form())
{
	<div class="row">
		<div class="col-sm-4">
			@Html.YKN().DisplayFor(x => x.Fecha)
		</div>
		<div class="col-sm-4">
			@Html.YKN().DisplayFor(x => x.Vigente)
		</div>
		<div class="col-sm-4">
			@Html.YKN().DisplayFor(x => x.Importe)
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			@Html.YKN().DisplayFor(x => x.Comentario)
		</div>
	</div>

	Html.YKN().FooterVolver();
}