@using LigaSoft.ExtensionMethods
@using LigaSoft.Models.ViewModels
@model FicharEnOtroEquipoVM

@section Titulo{
	Fichar a <span class="titulo-detacado">@Model.JugadorNombre</span> en otro equipo
}

@using (Html.YKN().Form())
{
	@Html.HiddenFor(x => x.JugadorId)

	<div class="row">
		<div class="col-sm-12">
			@(Html.YKN().Autocomplete_Old_Cambiar_PorNuevoAutocompleteFor(x => x.NuevoEquipoId)
						  .Label("Ingresar el nombre del equipo")
						  .Url("Jugador", "FicharEnOtroEquipoAutocomplete")
						  .AddParam("jugadorId", Model.JugadorId.ToString())
			)
		</div>
	</div>

	{ Html.YKN().FooterGuardarCancelar(); }
}

