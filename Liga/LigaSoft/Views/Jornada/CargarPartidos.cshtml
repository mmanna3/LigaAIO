@using LigaSoft.ExtensionMethods
@model LigaSoft.Models.ViewModels.JornadaVM

@section Titulo{
	@Model.Titulo
}

@section Subtitulo{
	@Model.Subtitulo
}

@Html.YKNNonTyped().ValidationSummary()

@using (Html.YKN().Form())
{
	@(Html.HiddenFor(x => x.FechaId))

	for (int i = 0; i < Model.Partidos.Count; i++)
	{
		<div class="row">
			<div class="col-sm-2">
				@(Html.YKN().DisplayFor(x => x.Partidos[i].Categoria))
				@(Html.HiddenFor(x => x.Partidos[i].CategoriaId))
			</div>
			<div class="col-sm-2">
				@(Html.YKN().EditorFor(x => x.Partidos[i].GolesLocal))
			</div>
			<div class="col-sm-1" style="padding-top: 30px;">
				VS
			</div>
			<div class="col-sm-2">
				@(Html.YKN().EditorFor(x => x.Partidos[i].GolesVisitante))
			</div>
		</div>
	}

	{ Html.YKN().FooterGuardarCancelar(); }
}